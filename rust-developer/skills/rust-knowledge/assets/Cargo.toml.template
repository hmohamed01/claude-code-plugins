[package]
name = "{{PROJECT_NAME}}"
version = "0.1.0"
edition = "2021"
authors = ["{{AUTHOR}}"]
description = "{{DESCRIPTION}}"
license = "MIT"
repository = "{{REPOSITORY}}"
readme = "README.md"
keywords = []
categories = []

# Minimum supported Rust version
rust-version = "1.70"

[dependencies]
# Core dependencies
thiserror = "1.0"      # Error handling
anyhow = "1.0"         # Application errors
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Async runtime (uncomment if needed)
# tokio = { version = "1", features = ["full"] }

# Logging (uncomment if needed)
# tracing = "0.1"
# tracing-subscriber = "0.3"

[dev-dependencies]
# Testing
# proptest = "1.0"
# mockall = "0.11"

[lints.rust]
unsafe_code = "warn"

[lints.clippy]
all = "warn"
pedantic = "warn"
nursery = "warn"
# Allow some pedantic lints
module_name_repetitions = "allow"
must_use_candidate = "allow"

[profile.dev]
opt-level = 0
debug = true

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"
strip = true
