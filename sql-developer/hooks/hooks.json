{
  "hooks": [
    {
      "matcher": {
        "tool_name": "Write",
        "file_path": "**/*.sql"
      },
      "hooks": [
        {
          "type": "command",
          "command": "$CLAUDE_PLUGIN_ROOT/hooks/scripts/check-sql-patterns.sh \"$FILE_PATH\" \"$TOOL_INPUT\""
        }
      ]
    },
    {
      "matcher": {
        "tool_name": "Edit",
        "file_path": "**/*.sql"
      },
      "hooks": [
        {
          "type": "command",
          "command": "$CLAUDE_PLUGIN_ROOT/hooks/scripts/check-sql-patterns.sh \"$FILE_PATH\" \"$TOOL_INPUT\""
        }
      ]
    }
  ]
}
